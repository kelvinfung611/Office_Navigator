/* Scrollable List Styles - SCALED 1.5X */
.items-scroll-view-style {
    flex-grow: 1;
    margin-bottom: 23px; /* Original: 15px */
}

/* NEW Destination Card Styles */
.destination-card {
    flex-direction: row;
    align-items: center;
    background-color: white;
    border-radius: 20px;
    margin: 10px 15px 20px;
    padding: 25px;
}

.destination-card:hover {
    /* Remove transform as it may not be supported in Unity UI Toolkit */
}

.destination-card-icon {
    width: 15px;
    height: 70px;
    border-radius: 8px;
    margin-right: 30px;
}

.destination-card-label {
    flex-grow: 1;
    font-size: 38px;
    -unity-font-style: bold;
    color: rgb(3, 1, 57);
}

.destination-card-button {
    font-size: 30px;
    -unity-font-style: bold;
    color: white;
    background-color: rgb(21, 58, 199);
    border-radius: 25px;
    padding: 15px 35px;
    border-width: 0;
}

/* Scanning Page Animation */
.scanner-animation {
    width: 600px;
    height: 600px;
    border-width: 8px;
    border-color: rgba(255, 255, 255, 0.9);
    border-radius: 40px;
    overflow: hidden;
    position: relative;
    background-color: rgba(255, 255, 255, 0.05);
}

.scanner-line {
    position: absolute;
    left: 0;
    width: 100%;
    height: 10px;
    background-color: rgb(26, 192, 215);
    border-radius: 5px;
    top: -10px; /* Start off-screen */
}

.scanner-trail-1 {
    position: absolute;
    left: 0;
    width: 100%;
    height: 8px;
    background-color: rgba(26, 192, 215, 0.7);
    border-radius: 4px;
    top: -10px;
}

.scanner-trail-2 {
    position: absolute;
    left: 0;
    width: 100%;
    height: 6px;
    background-color: rgba(26, 192, 215, 0.5);
    border-radius: 3px;
    top: -10px;
}

.scanner-trail-3 {
    position: absolute;
    left: 0;
    width: 100%;
    height: 4px;
    background-color: rgba(26, 192, 215, 0.3);
    border-radius: 2px;
    top: -10px;
}

.scanner-glow {
    position: absolute;
    left: -5px;
    width: 110%;
    height: 20px;
    background-color: rgba(26, 192, 215, 0.2);
    border-radius: 10px;
    top: -15px;
}

/* PopUp Message Styles (if you use it) */
.pop-up-msg-style {
    position: absolute;
    width: auto; /* Adjust */
    min-width: 300px; /* Original: 200px */ /* Adjust */
    height: auto; /* Adjust */
    padding: 23px 38px; /* Original: 15px 25px */
    display: flex; /* Changed from display: none; */
    justify-content: center;
    align-items: center;
    align-self: flex-end;
    bottom: 30px; /* Original: 20px */
    right: 30px; /* Original: 20px */
    background-color: white;
    border-radius: 15px; /* Original: 10px */
    border-width: 1px;
    border-color: rgb(220,220,220);
    
    opacity: 0; /* Initially transparent */
    visibility: hidden; /* Initially hidden and non-interactive */
}
.pop-up-msg-style.visible { /* Add this class via C# to show */
    opacity: 1; /* Fully visible */
    visibility: visible; /* Make it visible and interactive */
}
.pop-up-label-style {
    -unity-text-align: middle-center;
    font-size: 24px; /* Original: 16px */
    color: rgb(3, 1, 57);
}

/* Localization Prompt Styles */
.localization-prompt-container {
    justify-content: center;
    align-items: center;
    width: 100%;
    height: 100%;
    position: absolute;
    background-color: rgba(0, 20, 40, 0.9);
    opacity: 0;
    transition: opacity 1s ease-in-out; /* Fade animation */
}

.localization-prompt-container.visible {
    opacity: 1;
}

.localization-prompt-label {
    -unity-font-style: bold;
    font-size: 40px;
    color: white;
    -unity-text-align: middle-center;
    white-space: normal;
    /* Animation removed: will be handled in C# */
}