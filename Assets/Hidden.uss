.hidden {
    display: none;
}
/* MallExplorerPage.uss */

.visible {
    display: flex;
}

/* Header Styles */
.header-container {
    width: 100%;
    height: 10%;
    background-color: rgb(3, 1, 57);
    flex-direction: row;
    align-items: center;
    justify-content: center;
    padding: 10px;
}
.header-icon-style {
    width: 40px;
    height: 40px;
    background-size: contain;
    background-repeat: no-repeat;
    background-position: center;
    margin-right: 15px;
}
.header-title-style {
    color: white;
    font-size: 28px;
    -unity-font-style: bold;
}

/* Main Content Area Styles */
.content-area-style {
    flex-grow: 1;
    padding: 30px; /* Original: 20px */
    flex-direction: column;
    background-color: white;
}
.page-subtitle-style {
    font-size: 36px; /* Original: 24px */    color: rgb(3, 1, 57);
    -unity-font-style: bold;
    margin-bottom: 30px; /* Original: 20px */
    -unity-text-align: middle-center;
}

/* Search Bar Styles */
.search-bar-container-style {
    flex-direction: row;
    align-items: center;
    border-width: 1px;
    border-color: rgb(0, 132, 255);
    border-radius: 38px; /* Original: 25px */
    padding: 8px 23px; /* Original: 5px 15px */
    margin-bottom: 30px; /* Original: 20px */
    background-color: white;
}
.search-icon-style {
    width: 30px; /* Original: 20px */
    height: 30px; /* Original: 20px */
    background-size: contain;
    background-repeat: no-repeat;
    background-position: center;
    margin-right: 15px; /* Original: 10px */
}
.search-field-style {
    flex-grow: 1;
    font-size: 24px; /* Original: 16px */
    height: 45px; /* Original: 30px */
    border-width: 0;
    background-color: transparent;
}
.search-field-style TextInput {
    background-color: transparent;
}

/* Tabs Styles */
.tabs-container-style {
    flex-direction: row;
    justify-content: space-around;
    background-color: rgba(26, 192, 215, 0.1);
    border-radius: 15px; /* Original: 10px */
    padding: 8px; /* Original: 5px */
    margin-bottom: 30px; /* Original: 20px */
    height: 75px; /* Original: 50px */
}
.tab-button {
    flex-grow: 1;
    flex-direction: row;
    align-items: center;
    justify-content: center;
    font-size: 30px; /* Original: 15px */
    border-radius: 12px; /* Original: 8px */
    margin: 0 5px; /* Original: 0 3px */
    padding: 12px 0; /* Original: 8px 0 */
    border-width: 0;
    background-color: transparent;
    color: rgb(3, 1, 57);
}
.tab-icon {
    width: 27px; /* Original: 18px */
    height: 27px; /* Original: 18px */
    background-size: contain;
    background-repeat: no-repeat;
    background-position: center;
    margin-right: 12px; /* Original: 8px */
}
