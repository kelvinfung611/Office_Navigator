/* PopUp Message Styles (if you use it) */
.pop-up-msg-style {
    position: absolute;
    width: auto; /* Adjust */
    min-width: 300px; /* Original: 200px */ /* Adjust */
    height: auto; /* Adjust */
    padding: 23px 38px; /* Original: 15px 25px */
    display: flex; /* Changed from display: none; */
    justify-content: center;
    align-items: center;
    align-self: flex-end;
    bottom: 30px; /* Original: 20px */
    right: 30px; /* Original: 20px */
    background-color: white;
    border-radius: 15px; /* Original: 10px */
    border-width: 1px;
    border-color: rgb(220,220,220);
    box-shadow: 0px 5px 12px rgba(0,0,0,0.15); /* Original: 0px 3px 8px */
    
    opacity: 0; /* Initially transparent */
    visibility: hidden; /* Initially hidden and non-interactive */
    transition: opacity 0.5s ease-in-out, visibility 0s linear 0.5s; /* Fade opacity, delay visibility change for fade-out */
}
.pop-up-msg-style.visible { /* Add this class via C# to show */
    opacity: 1; /* Fully visible */
    visibility: visible; /* Make it visible and interactive */
    transition-delay: 0s; /* Apply opacity and visibility changes immediately for fade-in */
}
.pop-up-label-style {
    -unity-text-align: center;
    font-size: 24px; /* Original: 16px */
    color: rgb(3, 1, 57);
}

