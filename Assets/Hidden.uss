/* Header Styles */
.header-container {
    width: 100%;
    height: 10%;
    background-color: rgb(3, 1, 57);
    flex-direction: row;
    align-items: center;
    justify-content: center;
    padding: 10px;
}
.header-icon-style {
    width: 40px;
    height: 40px;
    background-size: contain;
    background-repeat: no-repeat;
    background-position: center;
    margin-right: 15px;
}
.header-title-style {
    color: white;
    font-size: 28px;
    -unity-font-style: bold;
}

/* Main Content Area Styles */
.content-area-style {
    flex-grow: 1;
    padding: 30px; /* Original: 20px */
